{
  "name": "nextjs-monorepo",
  "private": true,
  "workspaces": [
    "shared/*",
    "apps/*"
  ],
  "scripts": {
    "board": "yarn workspace @apps/task-board dev",
    "board:build": "yarn workspace @apps/task-board build",
    "-----------------": "-------------------------------------------",
    "test": "vitest",
    "check": "yarn run lint && yarn run format && yarn run vitest run",
    "lint": "yarn run eslint '**/*.{tsx,ts,jsx,json}'",
    "lint:fix": "yarn run eslint '**/*.{tsx,ts,jsx,json}' --fix",
    "format": "npx prettier '**/*.{tsx,ts,jsx,json}' --check",
    "format:fix": "npx prettier '**/*.{tsx,ts,jsx,json}' --write"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "autoprefixer": "^10.4.14",
    "eslint": "latest",
    "eslint-plugin-react": "latest",
    "postcss": "^8.4.23",
    "prettier": "^3.0.2",
    "tailwindcss": "^3.3.2",
    "vitest": "0.34.4"
  },
  "packageManager": "yarn@3.5.0"
}
